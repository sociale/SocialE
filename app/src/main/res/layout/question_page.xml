<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/question_page">

    <!--- child layout for posting question-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.45">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="POST THE QUESTION HERE"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!-- child layout for bottom buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.05"
        android:id="@+id/question_page_buttons"
        android:layout_gravity="bottom">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/horizontal_margin_bottom_buttons_question_page"
        android:layout_marginRight="@dimen/horizontal_margin_bottom_buttons_question_page"
        android:layout_marginTop="@dimen/vertical_margin_bottom_buttons_question_page"
        android:layout_marginBottom="@dimen/vertical_margin_bottom_buttons_question_page"
        android:id="@+id/thumbsup_icon"
        android:background="@drawable/ic_thumbs_up_unclicked"
        android:scaleType="fitXY" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/horizontal_margin_bottom_buttons_question_page"
        android:layout_marginRight="@dimen/horizontal_margin_bottom_buttons_question_page"
        android:layout_marginTop="@dimen/vertical_margin_bottom_buttons_question_page"
        android:layout_marginBottom="@dimen/vertical_margin_bottom_buttons_question_page"
        android:id="@+id/thumbsdown_icon"
        android:background="@drawable/ic_thumbs_down_unclicked"
        android:scaleType="fitXY" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/horizontal_margin_bottom_buttons_question_page"
        android:layout_marginRight="@dimen/horizontal_margin_bottom_buttons_question_page"
        android:layout_marginTop="@dimen/vertical_margin_bottom_buttons_question_page"
        android:layout_marginBottom="@dimen/vertical_margin_bottom_buttons_question_page"
        android:id="@+id/share_icon"
        android:background="@drawable/ic_share"
        android:scaleType="fitXY" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/horizontal_margin_bottom_buttons_question_page"
        android:layout_marginRight="@dimen/horizontal_margin_bottom_buttons_question_page"
        android:layout_marginTop="@dimen/vertical_margin_bottom_buttons_question_page"
        android:layout_marginBottom="@dimen/vertical_margin_bottom_buttons_question_page"
        android:id="@+id/more_options"
        android:background="@drawable/ic_vertical_dots"
        android:scaleType="fitXY" />
    </LinearLayout>

</LinearLayout>