<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.akhil.sociale.newQuestion">

    <!--- child layout for posting question-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.45">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="POST THE QUESTION HERE"
            android:textSize="25sp"/>
    </LinearLayout>

    <!--- child layout for options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option 1"
            android:textSize="25sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option 2"
            android:textSize="25sp" />
    </LinearLayout>

    <!-- child layout for bottom buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.05"
        android:id="@+id/question_page_buttons"
        android:layout_gravity="bottom">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/horizontal_margin_bottom_buttons_question_page"
            android:layout_marginRight="@dimen/horizontal_margin_bottom_buttons_question_page"
            android:layout_marginTop="@dimen/vertical_margin_bottom_buttons_question_page"
            android:layout_marginBottom="@dimen/vertical_margin_bottom_buttons_question_page"
            android:id="@+id/thumbsup_button"
            android:background="@drawable/ic_thumbs_up_unclicked"
            android:scaleType="fitXY" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/horizontal_margin_bottom_buttons_question_page"
            android:layout_marginRight="@dimen/horizontal_margin_bottom_buttons_question_page"
            android:layout_marginTop="@dimen/vertical_margin_bottom_buttons_question_page"
            android:layout_marginBottom="@dimen/vertical_margin_bottom_buttons_question_page"
            android:id="@+id/thumbsdown_button"
            android:background="@drawable/ic_thumbs_down_unclicked"
            android:scaleType="fitXY" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/horizontal_margin_bottom_buttons_question_page"
            android:layout_marginRight="@dimen/horizontal_margin_bottom_buttons_question_page"
            android:layout_marginTop="@dimen/vertical_margin_bottom_buttons_question_page"
            android:layout_marginBottom="@dimen/vertical_margin_bottom_buttons_question_page"
            android:id="@+id/share_button"
            android:background="@drawable/ic_share"
            android:scaleType="fitXY" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/horizontal_margin_bottom_buttons_question_page"
            android:layout_marginRight="@dimen/horizontal_margin_bottom_buttons_question_page"
            android:layout_marginTop="@dimen/vertical_margin_bottom_buttons_question_page"
            android:layout_marginBottom="@dimen/vertical_margin_bottom_buttons_question_page"
            android:id="@+id/more_options_button"
            android:background="@drawable/ic_vertical_dots"
            android:scaleType="fitXY" />
    </LinearLayout>

</LinearLayout>
